# Lectura de parametros de la linea de comandos 
__usage__ = "\n  %s -d directorio destino"%sys.argv[0]
parser = OptionParser( usage = __usage__ )
parser.add_option("-i",dest="ip",help="ip",default="127.0.0.1") 
